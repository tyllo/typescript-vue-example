{
  "jsAutolint.enable": true,
  "jsAutolint.defaultLinters": [
    "eslint"
  ],

  "flowide.enabled": true,
  "flowide.pathToFlow": "flow",
  "javascript.validate.enable": false,

  "editor.tabSize": 2,
  "editor.rulers": [80, 120],

  "files.eol": "\n",

  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true
  }
}
